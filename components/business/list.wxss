/* components/bus/list.wxss */
/* 商家列表 */
.bus-list{display:flex;flex-direction:column;width:98%;margin:0 auto;}
.bus_search{margin:0 auto;margin-bottom:10px;display:flex;justify-content:space-between;align-items:center;width:140px;}
.bus_search .bus-input-search{position:relative;}
.bus_search .bus-input-search image{width:10px;height:10px;position:absolute;top:calc(50% - 5px);left:8px;}
.bus_search input{background-color:#F2F3F7;width:100px;color:#ACACAC;height:30px;line-height:30px;border-radius:15px;padding:0 20px;font-size:12px;}
.bus-list-item{display:flex;flex:1;flex-direction:row;height:80px;background-color:#fff;margin-bottom:6px;}
.bus-list-item image{width:80px;height:80px;}
.bus-list-item-text{display:flex;flex:1;flex-direction:column;padding-left:6px;}
.text-title{line-height:40px;}
.text-desc{line-height:40px;color:#9a9a9a;font-size:12px;}
.bus_list-no-data{display:flex;width:100%;height:40px;align-items:center;justify-content:center;font-size:12px;}