.form{
  display:flex;
  flex-direction:column;
  padding:10px;
}
.form-row{
  display:flex;
  height:40px;
  align-items:center;
  font-size:12px;
}
.label-title{
  width:90px;
  display:flex;
  justify-content:flex-end;
  padding-right:10px;
}
.form-div{
  display:flex;
  flex:1;
  align-items:center;
  justify-content:flex-start;
}
.form-input{
  border:1px solid #ccc;
  border-radius:3px;
  flex:1;
  height:30px;
  padding: 0 5px;
}
slider{width:100%;}
.form-file{flex:none;}
.form-file button{display:flex;}
.btn-area{padding-top:10px;}
.form-row-auto{
  height:auto;
  padding:5px 0;
}
.form-textarea{
  display:flex;
  flex:1;
  width:100%;
  height:100px;
  border:1px solid #ccc;
  border-radius:3px;
  padding:5px;
}
.red{
  color:#ff0000;
}

.file-list{
	display:flex;
	width:100%;
	flex-wrap:wrap;
	margin-bottom:-2px;
}
.file-item{
	display:flex;
	width:calc(25% - 2px);
	height:50px;
	margin-right:2px;
	margin-bottom:2px;
	position:relative;
	align-items:center;
	justify-content:center;
}
.file-item image,.file-item video{
	width:100%;
	height:100%;
	border-radius:4px;
	opacity:0.9;
}
.file-item .percent{
	height:20px;
	line-height:20px;
	padding:0 4px;
	background:rgba(0,0,0,0.3);
	color:#fff;
	position:absolute;
	text-align:center;
	font-size:12px;
	border-radius:4px;
}

.favorite_button{
    height:40px;
    background: #1AAD19;
    background: -moz-linear-gradient(#1AAD19, #179B16);
    background: -ms-linear-gradient(#1AAD19, #179B16);
    background: -o-linear-gradient(#1AAD19, #179B16);
    background: -webkit-gradient(linear, 0 0, 0 100%, from(#1AAD19), to(#179B16));
    background: -webkit-linear-gradient(#1AAD19, #179B16);
    background: linear-gradient(#1AAD19, #179B16);
    position: fixed;
    bottom:10px;
    right:10px;
    color: #fff;
    font-size: 12px;
    text-align: center;
    line-height: 40px;
    white-space:nowrap;
    -webkit-transition: all 0.3s ease-out;
    -moz-transition: all 0.3s ease-out;
    -ms-transition: all 0.3s ease-out;
    -o-transition: all 0.3s ease-out;
    transition: all 0.3s ease-out;
    text-shadow: 0 2px 1px rgba(0,0,0,0.25);
    box-shadow: inset 0 2px 3px rgba(255,255,255,0.13), 0 5px 8px rgba(0,0,0,0.35), 0 3px 10px 4px rgba(0,0,0,0.2);
}