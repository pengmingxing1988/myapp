/* pages/ads/detail.wxss */
.ads_detail_banner{display:flex;width:100%;height:200px;}
.ads_detail_banner swiper-item{display:flex;width:100%;height:100%;align-items:center;justify-content:center;}
.ads_detail_banner video{width:100%;height:100%;}
.ads_detail_title{display:flex;width:calc(100% - 20px);line-height:22px;margin:10px 10px 0 10px;color:#333;font-size:14px;font-weight:bold;}
.ads_detail_content{display:flex;width:calc(100% - 20px);line-height:22px;margin:6px 10px 0 10px;color:#555;font-size:12px;}
.ads_detail_df{display:flex;width:calc(100% - 20px);margin:6px 10px 0 10px;justify-content:space-between;flex-direction:row;align-items:center;}
.ads_detail_time{color:#555;font-size:12px;}
.ads_detail_favorite{font-size:20px;}
.ads_detail_favorite.current{color:#d81e06;}