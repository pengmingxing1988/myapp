/* pages/ads/detail.wxss */
.ads_detail_banner{display:flex;width:100%;height:200px;}
.ads_detail_banner swiper-item{display:flex;width:100%;height:100%;align-items:center;justify-content:center;}
.ads_detail_banner video{width:100%;height:100%;}
.ads_detail_title{display:flex;width:calc(100% - 20px);line-height:22px;margin:10px 10px 0 10px;color:#333;font-size:14px;font-weight:bold;}
.ads_detail_content{display:flex;width:calc(100% - 20px);line-height:22px;margin:6px 10px 0 10px;color:#555;font-size:12px;}
.ads_detail_df{display:flex;width:calc(100% - 20px);margin:6px 10px 0 10px;justify-content:space-between;flex-direction:row;align-items:center;}
.ads_detail_time{color:#555;font-size:12px;}
.ads_detail_favorite{font-size:20px;}
.ads_detail_favorite.current{color:#d81e06;}

.favorite_button{
    height:40px;
    background: #1AAD19;
    background: -moz-linear-gradient(#1AAD19, #179B16);
    background: -ms-linear-gradient(#1AAD19, #179B16);
    background: -o-linear-gradient(#1AAD19, #179B16);
    background: -webkit-gradient(linear, 0 0, 0 100%, from(#1AAD19), to(#179B16));
    background: -webkit-linear-gradient(#1AAD19, #179B16);
    background: linear-gradient(#1AAD19, #179B16);
    position: fixed;
    bottom:10px;
    right:10px;
    color: #fff;
    font-size: 12px;
    text-align: center;
    line-height: 40px;
    white-space:nowrap;
    -webkit-transition: all 0.3s ease-out;
    -moz-transition: all 0.3s ease-out;
    -ms-transition: all 0.3s ease-out;
    -o-transition: all 0.3s ease-out;
    transition: all 0.3s ease-out;
    text-shadow: 0 2px 1px rgba(0,0,0,0.25);
    box-shadow: inset 0 2px 3px rgba(255,255,255,0.13), 0 5px 8px rgba(0,0,0,0.35), 0 3px 10px 4px rgba(0,0,0,0.2);
}