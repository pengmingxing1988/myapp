/* pages/ads/createOrEdit.wxss */
page{
  background-color:#fff;
}
.form{
  display:flex;
  flex-direction:column;
  padding:10px;
}
.form-row{
  display:flex;
  height:40px;
  align-items:center;
  font-size:12px;
}
.label-title{
  width:90px;
  display:flex;
  justify-content:flex-end;
  padding-right:10px;
}
.form-div{
  display:flex;
  flex:1;
  align-items:center;
  justify-content:flex-start;
}
.form-input{
  border:1px solid #ccc;
  border-radius:3px;
  flex:1;
  height:30px;
  padding: 0 5px;
}
slider{width:100%;}
.form-file{flex:none;}
.btn-area{padding-top:10px;}
.form-row-auto{
  height:auto;
  padding:5px 0;
}
.form-textarea{
  display:flex;
  flex:1;
  width:100%;
  height:100px;
  border:1px solid #ccc;
  border-radius:3px;
  padding:5px;
}
.red{
  color:#ff0000;
}