.tabs{display:flex;width:100%;flex-direction:row;height:30px;align-items:center;border-bottom:1px solid #707070;background-color:#fff;}
.tab-item{display:flex;flex:1;height:100%;align-items:center;justify-content:center;position:relative;}
.tab-current{color:#d81e06;}
.tab-current::after{content:"";display:block;height:2px;width:60px;background-color:#d81e06;position:absolute;bottom:-1px;left:calc(50% - 30px);}
adslist,buslist{margin-top:10px;width:100%;}
.no-data{padding:10px 0;font-size:12px;}