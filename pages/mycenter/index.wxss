/* pages/mycenter/index.wxss */
page{
	background:#E7E7E7;
}
.userinfo-container {
  display:flex;
  height:100px;
  background-color:#fff;
  align-items:center;
  justify-content:center;
  flex-direction:column;
}
.userinfo-avatar {
  width: 64px;
  height: 64px;
  margin: 10px;
  border-radius: 50%;
}
.userinfo-nickname{
  font-size:12px;
  line-height:22px;
}

.menu-list{
  margin-top:5px;
  display:flex;
  flex-direction:column;
}
.menu-list-item{
  display:flex;
  height: 40px;
  align-items:center;
  justify-content:flex-start;
  background-color:#fff;
  margin-bottom:1px;
  font-size:16px;
  padding-left:20px;
  position:relative;
}
.menu-list-item::before{
  position:absolute;
  right:5px;
}